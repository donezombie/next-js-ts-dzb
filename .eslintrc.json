{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "react-app",
    "prettier",
    "molindo/typescript",
    "molindo/react",
    "plugin:@next/next/recommended"
  ],
  "plugins": ["react", "prettier", "react-hooks"],
  "ignorePatterns": ["src/**/*.js"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unreachable": "off",
    "react-hooks/rules-of-hooks": 0, // Checks rules of Hooks
    "react-hooks/exhaustive-deps": 0,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true,
        "endOfLine": "auto"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "parserOptions": {
        "project": "./jsconfig.json"
      }
    }
  ]
}
